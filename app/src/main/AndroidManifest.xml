<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leonardolopez.games" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Helicopter1"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_helicopter1"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.leonardolopez.games.MainActivity" />
        </activity>
        <activity
            android:name=".Helicopter2"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_helicopter2"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.leonardolopez.games.MainActivity" />
        </activity>
        <activity
            android:name=".Helicopter3"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_helicopter3"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.leonardolopez.games.MainActivity" />
        </activity>
        <activity
            android:name=".Pong"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_pong"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.leonardolopez.games.MainActivity" />
        </activity>
    </application>

</manifest>
